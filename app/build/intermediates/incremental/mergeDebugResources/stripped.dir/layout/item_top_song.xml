<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="65dp"
    android:paddingLeft="10dp">

    <ImageView
        android:id="@+id/item_play_state"
        android:layout_width="15dp"
        android:layout_height="25dp"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:scaleType="centerInside"
        android:src="@drawable/ic_status_play"
        android:visibility="gone" />

    <ImageView
        android:id="@+id/iv_song_img"
        android:layout_width="42dp"
        android:layout_height="42dp"
        android:layout_centerVertical="true" />

    <TextView
        android:id="@+id/viewpager_list_toptext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="13dp"
        android:layout_marginRight="10dp"
        android:layout_toRightOf="@id/iv_song_img"
        android:ellipsize="end"
        android:maxLines="1"
        android:singleLine="true"
        android:text="被驯服的象"
        android:textColor="@color/listTextColor"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/viewpager_list_reason"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/viewpager_list_toptext"
        android:layout_alignBottom="@+id/viewpager_list_toptext"
        android:layout_marginTop="1dp"
        android:layout_marginBottom="1dp"
        android:layout_toRightOf="@id/viewpager_list_toptext"
        android:paddingLeft="3dp"
        android:paddingRight="3dp"
        android:text="超过90%的人收听"
        android:background="@color/pink"
        android:textColor="@color/red"
        android:textSize="12sp" />

    <ImageView
        android:id="@+id/iv_gedan_detail_sq"
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:layout_below="@+id/viewpager_list_toptext"
        android:layout_alignLeft="@id/viewpager_list_toptext"
        android:layout_marginTop="5dp"
        android:src="@drawable/ic_song_sq" />

    <TextView
        android:id="@+id/viewpager_list_bottom_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/viewpager_list_toptext"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="5dp"
        android:layout_toRightOf="@+id/iv_gedan_detail_sq"
        android:ellipsize="end"
        android:maxLength="20"
        android:singleLine="true"
        android:text="蔡健雅"
        android:textColor="@color/listSubTextColor"
        android:textSize="10sp" />

    <ImageView
        android:id="@+id/iv_list_video"
        android:layout_width="23dp"
        android:layout_height="23dp"
        android:layout_centerVertical="true"
        android:layout_marginRight="30dp"
        android:layout_toLeftOf="@+id/viewpager_list_button"
        android:src="@drawable/ic_watch_view"
        android:visibility="gone" />

    <ImageView
        android:id="@+id/viewpager_list_button"
        android:layout_width="15dp"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="10dp"
        android:focusable="true"
        android:src="@drawable/ic_more_black" />
</RelativeLayout>