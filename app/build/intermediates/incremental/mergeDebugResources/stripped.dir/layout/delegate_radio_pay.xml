<?xml version="1.0" encoding="utf-8"?>
                                                                   

    

                 
                     
                                                                  

                 
                        
                                                                                          
           

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" android:tag="layout/delegate_radio_pay_0" xmlns:android="http://schemas.android.com/apk/res/android">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/img_radio_pay_back"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_margin="10dp"
                android:tag="binding_1"                      
                android:src="@drawable/ic_left_arrow_black" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="7"
                android:gravity="center_vertical"
                android:text="付费精品"
                android:textColor="@color/black"
                android:textSize="19sp" />

        </LinearLayout>

        <include
                                               
                                               
            layout="@layout/delegate_normal_loading" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_radio_pay_normal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:tag="binding_2"        
                                         
                                      />
    </LinearLayout>
         