    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" android:tag="layout/delegate_new_album_0" xmlns:app="http://schemas.android.com/apk/res-auto">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/img_radio_back"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_margin="10dp"
                android:tag="binding_1"                      
                android:src="@drawable/ic_left_arrow_black" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="7"
                android:gravity="center_vertical"
                android:text="新碟上架"
                android:textColor="@color/black"
                android:textSize="19sp" />

        </LinearLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_gedan_detail_normal"
            android:tag="binding_2"    
                                           
                                           
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <include
                                               
                                               
            layout="@layout/delegate_normal_loading" />
    </LinearLayout>
         