<?xml version="1.0" encoding="utf-8"?>

                                                        

    

                 
                     
                                                                

                 
                        
                                                                                  

                 
                          
                                                                    
           


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" android:tag="layout/delegate_mv_sort_0" xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/img_tab_back"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_margin="10dp"
                android:tag="binding_1"                      
                android:src="@drawable/ic_left_arrow_black" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="7"
                android:gravity="center_vertical"
                android:text="MV分类"
                android:textColor="@color/black"
                android:textSize="19sp" />

            <ImageView
                android:id="@+id/img_tab_search"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="15dp"
                android:src="@drawable/ic_search_gray" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="10dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_mv_sort_title"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:tag="binding_2"                                   
                android:textColor="@color/black"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_mv_sort_dialog"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="15dp"
                android:text="筛选"
                android:tag="binding_3"                                
                android:textColor="@color/black" />
        </LinearLayout>


        <include
                                               
                                               
            layout="@layout/delegate_normal_loading" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_mv_sort"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:tag="binding_4" 
                                   
                                
                                            />

    </LinearLayout>
         